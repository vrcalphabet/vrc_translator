{
  "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
  "editor.formatOnType": false, // 必須
  "editor.formatOnPaste": true, // 任意
  "editor.formatOnSave": true, // 任意
  "editor.formatOnSaveMode": "file", // 保存時にフォーマットするために必須
  "files.autoSave": "onFocusChange", // 推奨だが任意
  "vs-code-prettier-eslint.prettierLast": false // trueに設定すると最後に'prettier'を実行する
}
