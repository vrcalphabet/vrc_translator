{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 3,
  "name": "VRChat日本語化アドオン",
  "version": "0.0.1",
  "background": {
    "service_worker": "./background/background.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "unlimitedStorage",
    "alarms"
  ],
  "host_permissions": [
    "https://vrchat.com/home",
    "https://vrchat.com/home/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/*",
        "output/*.json"
      ],
      "matches": ["https://vrchat.com/*"]
    }
  ]
}